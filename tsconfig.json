{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true,
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node", // Or "bundler" for newer setups
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Vite handles transpilation, TypeScript is for type checking
    "jsx": "react-jsx", // Use the new JSX transform
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "vite.config.ts", "jest.config.ts"], // Include src and config files
  "references": [{ "path": "./tsconfig.node.json" }] // For Vite/Node specific types
}
